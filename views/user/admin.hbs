
<div class="container">
	<div class="row">
                <div class="col m-3">
                    <h3 class="text-center text-primary">订单管理</h3>
                </div>
                {{# each orders}}
			<div class="card">
				  <div class="card-header">
				    订单号: {{this.paymentId}}
				  </div>
				  <ul class="list-group list-group-flush">
                                      {{# each this.items }}
				          <li class="list-group-item">
                                              {{this.item.title}}  X  {{this.qty}}
                                              <span class="badge badge-success float-right">{{this.price}}元</span>
                                          </li>
                                      {{/each}}
				  </ul>
                                  <div class="card-header"><strong>总计: {{this.cart.totalPrice}} 元</strong></div>
			</div>
                        <hr class="dashed">
                 {{/each}}
	</div>
</div>


<div class="container">
	<div class="row">
                <div class="col m-3">
                    <h3 class="text-center text-primary">订单管理</h3>
                </div>
                {{# each orders}}
			<div class="card bg-primary text-primary">
				  <div class="card-header text-white">
				    订单号: <t style="font-size:70%">{{this.paymentId}}</t>
				  </div>
				  <div class="card-header text-white">
				    Time: <t style="font-size:70%">{{this.timestamp}}</t>
				  </div>
				  <ul class="list-group list-group-flush">
                                      {{# each this.items }}
				          <li class="list-group-item">
                                              {{this.item.title}}  X  {{this.qty}}
                                              <span class="badge badge-success float-right">{{this.price}}元</span>
                                          </li>
                                      {{/each}}
				  </ul>
                                  <div class="card-header row text-white">
                                      <div class="col">
                                          <strong>总计: {{this.cart.totalPrice}} 元</strong>
                                      </div>
                                      <div class="col">
                                              <form action="/admin" method="post">
                                                   <input type="hidden" id="paymentId" name="paymentId" value="{{paymentId}}">
                                                   <select class="custom-select my-1 mr-sm-2" id="orderStatus" name="orderStatus">
                                                     <option selected>{{orderStatus}}</option>
                                                     <div class="dropdown-divider"></div>
                                                     <option value="等待确认收款">等待确认收款</option>
                                                     <div class="dropdown-divider"></div>
                                                     <option value="确认收款，正在发货">确认收款，正在发货</option> 
                                                     <div class="dropdown-divider"></div>
                                                     <option value="已发货，物流单号：">已发货，物流单号：</option>
                                                     <div class="dropdown-divider"></div>
                                                     <option value="订单已完成">订单已完成</option>
                                                     <div class="dropdown-divider"></div>
                                                     <option value="订单已取消">订单已取消</option>
                                                  </select>
                                                  <button type="submit" class="btn btn-success">确 定</button>
                                              </form>
                                      </div>
                                  </div>
			</div>
                        <hr class="dashed">
                 {{/each}}
	</div>
</div>
